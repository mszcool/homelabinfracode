{% for host_config in tp_host_configs %}
[{{ host_config.name }}]
description={{ host_config.name | title }} server configuration
disks={{ host_config.virtual_disk_config.devices_in_scope | map(attribute='device') | join(',') }}
root_device={{ host_config.virtual_disk_config.root_partition.device }}
root_size_mb={{ host_config.virtual_disk_config.root_partition.size_MB }}
network_parent={{ host_config.network_config.physical_network_parent }}
{% if host_config.virtual_disk_config.volume_group_volumes %}
volume_groups={% for vg_name, vg_config in host_config.virtual_disk_config.volume_group_volumes.items() %}{{ vg_name }}{% if not loop.last %},{% endif %}{% endfor %}

{% endif %}

{% endfor %}